<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="fontFamily">@font/font_raleway</item>
    </style>

    <!-- Toolbar theme -->
    <style name="ToolbarTheme" parent="Theme.AppCompat">
        <item name="fontFamily">@font/raleway_semibold</item>
    </style>

    <!-- AutoCompleteTextView theme -->
    <style name="AutoCompleteTextViewTheme" parent="android:Widget.AutoCompleteTextView">
        <item name="fontFamily">@font/raleway_bold</item>
        <item name="android:textColor">@color/colorGray</item>
    </style>

    <!-- Icon ImageView theme -->
    <style name="IconImageViewTheme" parent="android:Widget">
        <item name="android:tint">@color/colorGray</item>
    </style>

    <!-- TextView theme -->
    <style name="TextViewTheme" parent="android:Widget.TextView">
        <item name="android:textColor">@color/colorGray</item>
    </style>
    
</resources>
